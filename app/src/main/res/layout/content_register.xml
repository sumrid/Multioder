<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffb74d"
    tools:showIn="@layout/activity_register">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:paddingRight="24dp"
        android:paddingLeft="24dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/app_logo"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:padding="4dp"
                android:src="@drawable/app_logo" />

            <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="MultiOder App"-->
            <!--android:textSize="24sp"-->
            <!--android:textStyle="bold"-->
            <!--android:textColor="#fff"-->
            <!--android:layout_gravity="center_horizontal"-->
            <!--android:paddingLeft="16dp"-->
            <!--android:paddingRight="16dp"-->
            <!--android:paddingTop="2dp"-->
            <!--android:paddingBottom="16dp"/>-->

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#ffe5be"
                >

                <EditText
                    android:id="@+id/inp_name"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:drawableLeft="@drawable/ic_person_register"
                    android:drawablePadding="12dp"
                    android:ems="10"
                    android:hint="ชื่อ - นามสกุล"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingBottom="17dp"
                    android:paddingHorizontal="8dp"
                    android:theme="@style/RegisterEditext" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#ffe5be">

                <EditText
                    android:id="@+id/inp_email"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:drawableLeft="@drawable/ic_email_register"
                    android:drawablePadding="12dp"
                    android:ems="10"
                    android:hint="อีเมล์"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingBottom="17dp"
                    android:paddingHorizontal="8dp"
                    android:theme="@style/RegisterEditext" />
            </android.support.design.widget.TextInputLayout>



            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#ffe5be">

                <EditText
                    android:id="@+id/inp_password"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:drawableLeft="@drawable/ic_password_register"
                    android:drawablePadding="12dp"
                    android:ems="10"
                    android:hint="รหัสผ่าน"
                    android:inputType="none"
                    android:maxLines="1"
                    android:paddingBottom="17dp"
                    android:paddingHorizontal="8dp"
                    android:theme="@style/RegisterEditext" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_repass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#ffe5be">

                <EditText
                    android:id="@+id/inp_repass"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:drawableLeft="@drawable/ic_password_register"
                    android:drawablePadding="12dp"
                    android:ems="10"
                    android:hint="ยืนยันรหัสผ่าน"
                    android:inputType="none"
                    android:maxLines="1"
                    android:paddingBottom="17dp"
                    android:paddingHorizontal="8dp"
                    android:theme="@style/RegisterEditext" />
            </android.support.design.widget.TextInputLayout>




            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#ffe5be">

                <EditText
                    android:id="@+id/inp_phone"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:drawableLeft="@drawable/ic_phone_register"
                    android:drawablePadding="12dp"
                    android:ems="10"
                    android:hint="เบอร์โทร"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingBottom="17dp"
                    android:paddingHorizontal="8dp"
                    android:theme="@style/RegisterEditext" />
            </android.support.design.widget.TextInputLayout>


            <Button
                android:id="@+id/button_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:fontFamily="@font/mitr_light"
                android:clickable="true"
                android:padding="16dp"
                android:text="ลงทะเบียน"
                android:textAllCaps="false"
                android:textColor="#3e3e3e"
                android:textSize="18sp" />


        </LinearLayout>
    </ScrollView>






</RelativeLayout>