<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/view_foreground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="10dp">

        <ImageView
            android:id="@+id/cart_item_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/one_pot_chorizo" />

        <TextView
            android:id="@+id/cart_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/cart_item_image"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#535353"
            android:textSize="17dp"
            tools:text="ผัดกระเพราไก่" />

        <TextView
            android:id="@+id/food_item_description"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/cart_item_name"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/cart_item_image"
            android:maxLines="2"
            android:text="ไม่ใส่ถั่วฝักยาว พิเศษข้าว"
            android:textColor="#a9a9a9"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/cart_item_amount"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/food_item_description"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/cart_item_image"
            android:maxLines="2"
            android:text="จำนวน 2"
            android:textColor="#a9a9a9"
            android:textSize="12dp" />


        <TextView
            android:id="@+id/cart_item_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:fontFamily="sans-serif-medium"
            android:textColor="#f7af63"
            android:textSize="17dp"
            android:textStyle="bold"
            tools:text="฿ 500" />

        <ImageButton
            android:id="@+id/cart_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="10dp"
            app:srcCompat="@drawable/ic_check_" />
    </RelativeLayout>

</FrameLayout>
